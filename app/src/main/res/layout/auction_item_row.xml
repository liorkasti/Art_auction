<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/background_blue"
    android:orientation="horizontal"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_name_tv"

                style="@style/AuctionAppTheme.BasicTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_weight="1"
                android:text="Auction 1"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <!--<TextClock-->
                <!--android:id="@+id/textClock"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_margin="5dp"-->
                <!--android:layout_weight="1"-->
                <!--android:textAlignment="textEnd" />-->

        </LinearLayout>

        <ImageButton
            android:id="@+id/hp_main_image"
            style="@style/AuctionAppTheme.HPImage"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_weight="1"
            android:src="@drawable/art10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_enter_btn"
                style="@style/AuctionAppTheme.BasicButton"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_weight="1"
                android:text="ENTER"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>
    </GridLayout>


</LinearLayout>