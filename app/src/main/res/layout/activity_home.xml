<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context="com.example.user.art_auction.AuctionsActivity">

    <ScrollView
        android:id="@+id/home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <GridLayout
            android:id="@+id/home_gallerys"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="DuplicateIds">

            <Button
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/primary_green"
                android:text="@string/action_sign_in"
                android:onClick="startMain"
                android:textStyle="bold" />
            <AutoCompleteTextView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_search"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:singleLine="true" />

            <GridLayout
                android:id="@+id/home_gallerys"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">


                <GridLayout
                    android:id="@+id/Village_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/Village_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="right"
                        android:layout_row="0"
                        android:text="TextView" />

                    <TextClock
                        android:id="@+id/Village_textClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="0" />

                    <ImageButton
                        android:id="@+id/Village_imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="156dp"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_row="2"
                        app:srcCompat="@drawable/art10" />

                    <Button
                        android:id="@+id/Village_button1"
                        android:layout_width="164dp"
                        android:layout_height="34dp"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="4"
                        android:text="Button" />

                    <Button
                        android:id="@+id/Village_button2"
                        android:layout_width="164dp"
                        android:layout_height="34dp"
                        android:layout_column="1"
                        android:layout_gravity="right"
                        android:layout_row="4"
                        android:text="Button" />


                </GridLayout>

                <GridLayout
                    android:id="@+id/Matsart_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/Matsart_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="right"
                        android:layout_row="0"
                        android:text="TextView" />

                    <TextClock
                        android:id="@+id/Matsart_textClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="0" />

                    <ImageButton
                        android:id="@+id/Matsart_imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="156dp"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_row="2"
                        app:srcCompat="@drawable/art11" />

                    <Button
                        android:id="@+id/Matsart_button1"
                        android:layout_width="164dp"
                        android:layout_height="34dp"
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="4"
                        android:text="Button" />

                    <Button
                        android:id="@+id/Matsart_button2"
                        android:layout_width="164dp"
                        android:layout_height="34dp"
                        android:layout_column="1"
                        android:layout_gravity="right"
                        android:layout_row="4"
                        android:text="Button" />


                </GridLayout>
            </GridLayout>





        </GridLayout>
    </ScrollView>



</RelativeLayout>
